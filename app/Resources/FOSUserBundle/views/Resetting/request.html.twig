{% extends 'base_login.html.twig' %}
{% set body_class = 'login' %}

    {% block stylesheets %}
        {{ parent() }}
        <link href="{{ asset('bundles/app/theme/assets/pages/css/login-3.min.css') }}" rel="stylesheet" type="text/css" />
    {% endblock %}

{% block body %}
    <div class="content" style="margin-top:100px;">
        {% trans_default_domain 'FOSUserBundle' %}

        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div>
                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                <input type="text" id="username" name="username" required="required" />
            </div>
            <div>
                <input class="btn green" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </form>
    </div>
{% endblock %}
