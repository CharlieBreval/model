{% extends 'base_login.html.twig' %}
{% set body_class = 'login' %}

    {% block stylesheets %}
        {{ parent() }}
        <link href="{{ asset('bundles/app/theme/assets/pages/css/login-3.min.css') }}" rel="stylesheet" type="text/css" />
    {% endblock %}

{% block body %}
    <div class="content" style="margin-top:100px;">
        {% trans_default_domain 'FOSUserBundle' %}

        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn green" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
