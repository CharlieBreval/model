{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('app_home') }}">Calendrier</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="#">{{ workshop.title }}</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="#">Paiement</a>
                <i class="fa fa-circle"></i>
            </li>
        </ul>
    </div>

    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title"> {{ workshop.start|localizeddate("medium", "none", null, null, "cccc d LLLL yyyy HH:mm")|capitalize }} Ã  {{ workshop.end|date('H:i')}} {% if workshop.model is not null %} avec <strong>{{ workshop.model.username}}</strong> {% endif %}
        <small>{{ workshop.title }}</small>
    </h1>

    <div class="row">
        <div class="col-md-6">
            <div class="portlet light bordered">
                {{ form_start(form)}}
                {{ form_row(form)}}
                <input type="submit">
                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
