{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des séances</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Titre</th>
                <th>Crée par</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workshop in workshops %}
            <tr>
                <td><a href="{{ path('workshop_show', { 'id': workshop.id }) }}">{{ workshop.id }}</a></td>
                <td>{% if workshop.start %}{{ workshop.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if workshop.end %}{{ workshop.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if workshop.title %}{{ workshop.title|capitalize }}{% endif %}</td>
                <td>{% if workshop.createdBy %}{{ workshop.createdBy|capitalize }}{% endif %}</td>
                <td>
                    <ul class="no-bullet">
                        <li>
                            <a href="{{ path('workshop_show', { 'id': workshop.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('workshop_edit', { 'id': workshop.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="no-bullet">
        <li>
            <a href="{{ path('workshop_new') }}" class="btn btn-info">Ajouter une séance</a>
        </li>
    </ul>
{% endblock %}
