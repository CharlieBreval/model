{% extends 'base.html.twig' %}
{% block body %}
    <h1>Workshop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workshop.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if workshop.start %}{{ workshop.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if workshop.end %}{{ workshop.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{% if workshop.title %}{{ workshop.title }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="no-bullet">
        <li>
            <a href="{{ path('workshop_index') }}" class='btn btn-info'>Back to the list</a>
        </li>
        <li>
            <a href="{{ path('workshop_edit', { 'id': workshop.id }) }}" class="btn btn-warning">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
